/* miniprogram/pages/login/login.wxss */

page {
  background-color: #f4f4f8;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-sizing: border-box;
}

.content {
  width: 100%;
  height: 100%;
  margin-top: 100rpx;
}

.inputView {
  display: flex;
  align-items: center;
  background-color: white;
  line-height: 90rpx;
  height: 90rpx;
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.inputText {
  font-size: 36rpx;
  color: #333;
  margin-left: 30rpx;
}

.loginBtnView {
  width: 100%;
  background-color: #217dde;
  margin-top: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  height: 100rpx;
}

.loginBtn {
  font-size: 40rpx;
  color: white;
}


.lcb-tip {
  font-size: 36rpx;
  color: #333;
  position: absolute;
  bottom: 60rpx;
}
